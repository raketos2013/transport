@using FileManager.Domain.Enum
@model FileManager.Domain.Entity.AddresseeEntity
@{
    ViewData["Title"] = "Добавление адресата";
    SelectList addresseeGroups = new SelectList(ViewBag.AddresseeGroups, "Id", "Name");
}

<div class="container padding-top-container">
    <h1 class="text-center">Добавление адресата</h1>

    <form asp-action="CreateAddressee" method="post">
        <div class="row justify-content-md-center">
            <div class="form-group">
                <label asp-for="PersonalNumber" class="control-label"></label>
                <input asp-for="PersonalNumber" class="form-control" />
                <span asp-validation-for="PersonalNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddresseeGroupId" class="control-label"></label>
                <select asp-for="AddresseeGroupId" class="form-select mb-3" asp-items=@addresseeGroups></select>
                <span asp-validation-for="AddresseeGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EMail" class="control-label"></label>
                <input asp-for="EMail" class="form-control" />
                <span asp-validation-for="EMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fio" class="control-label"></label>
                <input asp-for="Fio" class="form-control" />
                <span asp-validation-for="Fio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StructuralUnit" class="control-label"></label>
                <input asp-for="StructuralUnit" class="form-control" />
                <span asp-validation-for="StructuralUnit" class="text-danger"></span>
            </div>
        </div>
        <div class="row  justify-content-md-center">
            <div class="col-1">
                <div class="form-group">
                    <a asp-action="Addressees"class="btn btn-warning">Назад</a>
                </div>
            </div>
            <div class="col-1">
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>

</div>
