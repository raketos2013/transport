@using FileManager.Domain.Entity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model OperationReadEntity
@{
}
@if (Model != null)
{
    <div class="modal-body-content">
        <div class="modal-row">
            <div class="modal-td">
                <p class="td-title">stepId</p>
                <p class="td-text">@Model.StepId</p>
            </div>
            <div class="modal-td">
                <p class="td-title">operId</p>
                <p class="td-text">@Model.OperationId</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Информировать об успехе</p>
                <p class="td-text">@Model.InformSuccess</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Группа рассылки</p>
                <p class="td-text">@Model.AddresseeGroupId</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Дополнительный текст</p>
                <p class="td-text">@Model.AdditionalText</p>
            </div>
        </div>
        <div class="modal-row">
            <div class="modal-td">
                <p class="td-title">Файл есть в источнике</p>
                <p class="td-text">@Model.FileInSource</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Кодировка</p>
                <p class="td-text">@Model.Encode</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Поиск по шаблону</p>
                <p class="td-text">@Model.SearchRegex</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Строка поиска</p>
                <p class="td-text">@Model.FindString</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Ожидаемый результат</p>
                <p class="td-text">@Model.ExpectedResult</p>
            </div>
            <div class="modal-td">
                <p class="td-title">Прервать задачу</p>
                <p class="td-text">@Model.BreakTaskAfterError</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="modal-body-content">
        <span>Свойства операции не настроены</span>
    </div>
}
