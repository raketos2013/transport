@model TaskStepEntity
@{
}

<div class="modal-body-content">
    <div class="modal-row">
        <div class="modal-td">
            <p class="td-title">Задача</p>
            <p class="td-text">@Model.TaskId</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Номер шага</p>
            <p class="td-text">@Model.StepNumber</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Краткое описание</p>
            <p class="td-text">@Model.Description</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Включён</p>
            <p class="td-text">@Model.IsActive</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Прерывание</p>
            <p class="td-text">@Model.IsBreak</p>
        </div>
    </div>
    <div class="modal-row">
        <div class="modal-td">
            <p class="td-title">Маска</p>
            <p class="td-text">@Model.FileMask</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Источник</p>
            <p class="td-text">@Model.Source</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Назначение</p>
            <p class="td-text">@Model.Destination</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Операция</p>
            <p class="td-text">@Model.OperationName</p>
        </div>
    </div>
</div>