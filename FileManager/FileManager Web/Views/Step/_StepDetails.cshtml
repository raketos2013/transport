        </div>
        <div class="modal-td">
            <p class="td-title">Прерывание</p>
            <p class="td-text">@Model.IsBreak</p>
        </div>
    </div>
    <div class="modal-row">
        <div class="modal-td">
            <p class="td-title">Маска</p>
            <p class="td-text">@Model.FileMask</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Источник</p>
            <p class="td-text">@Model.Source</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Назначение</p>
            <p class="td-text">@Model.Destination</p>
        </div>
        <div class="modal-td">
            <p class="td-title">Операция</p>
            <p class="td-text">@Model.OperationName</p>
        </div>
    </div>
</div>

