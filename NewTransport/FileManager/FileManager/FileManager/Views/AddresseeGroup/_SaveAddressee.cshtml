@model AddresseeEntity
@{
    SelectList addresseeGroups = new SelectList(ViewBag.AddresseeGroups, "Id", "Name");
}
<form id="createAddresseeForm" asp-action="CreateAddressee" asp-asp-controller="AddresseeGroup" method="post" class="modal-body-content">
    <div class="input-with-label">
        <label asp-for="PersonalNumber"></label>
        <input asp-for="PersonalNumber" readonly>
    </div>
    <div class="input-with-label">
        <label>Группа</label>
        <div class="select-wrapper">
            <select asp-for="AddresseeGroupId" asp-items=@addresseeGroups id="group-new-addressee"></select>
        </div>
    </div>
    <div class="input-with-label">
        <label asp-for="EMail"></label>
        <input asp-for="EMail">
    </div>
    <div class="input-with-label">
        <label asp-for="Fio"></label>
        <input asp-for="Fio" readonly>
    </div>
    <div class="input-with-label">
        <label asp-for="StructuralUnit"></label>
        <input asp-for="StructuralUnit" readonly>
    </div>
</form>

