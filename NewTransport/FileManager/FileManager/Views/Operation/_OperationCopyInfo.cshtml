@model OperationCopyEntity
@{
}
@if (Model != null)
{
    <div class="modal-body">
        <div class="modal-body-content">
            <div class="modal-row">
                <div class="modal-td">
                    <p class="td-title">Id Шага</p>
                    <p class="td-text">@Model.StepId</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Id Операции</p>
                    <p class="td-text">@Model.OperationId</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Информировать об успехе</p>
                    <p class="td-text">
                        <div>
                            <label class="toggle-checkbox" style="pointer-events: none;">
                                <input type="checkbox" checked="@Model.InformSuccess" readonly>
                                <span class="toggle-checkbox-switch"></span>
                            </label>
                        </div>
                    </p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Группа рассылки</p>
                    <p class="td-text">@Model.AddresseeGroupId</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Дополнительный текст</p>
                    <p class="td-text">@Model.AdditionalText</p>
                </div>
            </div>
            <div class="modal-row">
                <div class="modal-td">
                    <p class="td-title">Файл есть в источнике</p>
                    <p class="td-text">@Model.FileInSource.GetDescription()</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Файл есть в назначении</p>
                    <p class="td-text">@Model.FileInDestination.GetDescription()</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Дубль по журналу</p>
                    <p class="td-text">
                        @Model.FileInLog.GetDescription()
                    </p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Сортировка</p>
                    <p class="td-text">@Model.Sort.GetDescription()</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Кол-во файлов</p>
                    <p class="td-text">@Model.FilesForProcessing</p>
                </div>
                <div class="modal-td">
                    <p class="td-title">Аттрибуты</p>
                    <p class="td-text">@Model.FileAttribute.GetDescription()</p>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-full" onclick="ShowModal('modal-delete-operation')">
                Удалить
            </div>
            <div class="btn-full" onclick="StepOperationEdit()">
                Редактировать
            </div>
        </div>
    </div>
}
else
{
    <div class="modal-body">
        <div class="modal-body-content">
            <span>Свойства операции не настроены</span>
        </div>
        <div class="modal-footer">
            <div class="btn-full" onclick="StepOperationEdit()">
                Добавить
            </div>
        </div>
    </div>
}
