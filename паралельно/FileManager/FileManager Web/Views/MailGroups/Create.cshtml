@model FileManager.Domain.Entity.MailGroups

@{
    ViewData["Title"] = "Create";
}

<div class="container padding-top-container">
    <h2 class="text-center">Создание группы</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Номер</label>
                    <input asp-for="Id" class="form-control" />
                    <label asp-for="Name" class="control-label">Наименование</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-warning">Назад</a>
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
